package Ex01while문;

import java.util.Scanner;

public class Ex01while문4 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
	
		
		int num=0;
		int sum=0;
		while(num!=-1&&num%2==0) {
			
			System.out.print("숫자 입력 : ");
			num = sc.nextInt();
			sum += num%2+1;
		}
		System.out.println("짝수의 개수 : " + sum);
		
		
		

	}

	}

}
