package Ex01while문;

import java.util.Scanner;

public class Ex01while문4 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
	
		
		int num=0;
		int sum=0;
		while(num!=-1) {
			if(num%2==0&&num>1) {
				sum += num%2+1;
			}else if(num%2==1) {
				sum += num%2;
			}
			System.out.print("숫자 입력 : ");
			num = sc.nextInt();
		}
		System.out.println("짝수의 개수 : " + sum);
		
		
		

	}

}
